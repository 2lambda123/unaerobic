<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

    <com.kovalenych.tables.RotImageView
            android:id="@+id/run_static_progress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/progress_blue_left"
            />
    <ImageView
            android:id="@+id/run_static_progress_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0px"
            android:background="@drawable/progress_blue"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"

            android:weightSum="2">
        <ImageView
                android:id="@+id/run_static_progress_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:layout_marginLeft="4px"
                />
    </LinearLayout>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cl"
            />
    <TextView
            android:id="@+id/run_time_hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="center"
            android:text="00:00"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
</RelativeLayout>

