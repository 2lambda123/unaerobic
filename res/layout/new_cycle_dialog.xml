<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="3pt"
              android:background="#FF000000"
              android:gravity="center_horizontal"
        >

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
        <com.kovalenych.roboto.EditTextRoboto
                android:id="@+id/breath_edit"
                android:layout_width="55pt"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="@string/breath_s"
                android:textColor="#FF000000"
                />
        <com.kovalenych.roboto.EditTextRoboto
                android:id="@+id/hold_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:layout_marginLeft="3pt"
                android:hint="@string/hold_s"
                android:textColor="#FF000000"
                android:textSize="20dp"
                android:minWidth="55dp"

                />
    </LinearLayout>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            >
        <com.kovalenych.roboto.TextViewRoboto
                android:textSize="8pt"
                android:layout_height="23pt"
                android:layout_width="wrap_content"
                android:text="@string/repeat"

                />
        <com.kovalenych.roboto.EditTextRoboto
                android:id="@+id/repeat_edit"
                android:layout_width="25pt"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:text="1"
                android:textColor="#FF000000"
                android:textSize="9pt"
                android:gravity="center"
                />
        <com.kovalenych.roboto.TextViewRoboto
                android:textSize="8pt"
                android:layout_height="23pt"
                android:layout_width="wrap_content"
                android:text="@string/x_times"

                />
        <Button
                android:id="@+id/raise_check"
                android:layout_marginLeft="15dp"
                android:background="@drawable/raise"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/raise_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <com.kovalenych.roboto.TextViewRoboto
                android:textSize="8pt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/gen_cycles"
                />
        <LinearLayout
                android:layout_height="60dp"
                android:layout_width="fill_parent"
                >
            <com.kovalenych.roboto.EditTextRoboto
                    android:id="@+id/raise_breath_edit"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:text="100"
                    android:textSize="20dp"
                    android:textColor="#FF000000"
                    />
            <com.kovalenych.roboto.TextViewRoboto
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="%"
                    android:layout_weight="1"
                    />
            <com.kovalenych.roboto.EditTextRoboto
                    android:layout_weight="3"
                    android:id="@+id/raise_hold_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:layout_marginLeft="3pt"
                    android:textSize="20dp"
                    android:textColor="#FF000000"
                    android:text="100"
                    />
            <com.kovalenych.roboto.TextViewRoboto
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="%"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            >
        <Button
                android:id="@+id/cycle_delete"
                android:background="@drawable/trash"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />

        <com.kovalenych.roboto.ButtonRoboto
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:id="@+id/new_cycle_ok"
                android:background="#ff333333"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="@string/save"
                android:textColor="#FFFFFFFF"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                />
    </LinearLayout>


</LinearLayout>